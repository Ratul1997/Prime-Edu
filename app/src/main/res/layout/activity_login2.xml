<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:gravity="center"

        android:background="#F7FBFD">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/l2"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="LOGIN AS"
                android:textStyle="italic"
                android:textColor="@color/texts"/>

        </LinearLayout>
        <View
            android:layout_width="150dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:background="@color/texts" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="33"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/student"
                android:layout_margin="5dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/l3"/>
                <ImageView
                    android:layout_width="95dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l6"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:id="@+id/teacher"
                android:layout_weight="33"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:gravity="center">

                <ImageView

                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/l4"/>
                <ImageView
                    android:layout_width="95dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l7"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/management"
                android:layout_margin="5dp"
                android:layout_weight="33"
                android:gravity="center">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/l5"/>
                <ImageView
                    android:layout_width="95dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:src="@drawable/l8"/>
            </LinearLayout>

        </LinearLayout>
        <EditText
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="User Id"
            android:paddingLeft="12dp"
            android:textSize="20dp"
            android:inputType="number"
            android:id="@+id/userId"
            android:backgroundTint="#297FCA"
            android:layout_marginBottom="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:id="@+id/userPass"
            android:paddingLeft="12dp"
            android:inputType="textPassword"
            android:textSize="20dp"
            android:backgroundTint="#297FCA"
            android:layout_marginBottom="20dp"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textSize="15dp"
            android:id="@+id/rememberMe"
            android:backgroundTint="@color/texts"
            android:textColor="@color/texts"
            android:layout_gravity="end"/>

        <ImageButton
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/l9"
            android:id="@+id/logIn"
            android:background="@null"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password!"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:id="@+id/forgetPass"
            android:textStyle="italic"
            android:textColor="@color/texts"/>
        <View
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_height="2dp"
            android:background="@color/texts" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="bottom|center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doesn't have an account? â€¢ "
                android:textSize="15dp" />

            <TextView
                android:id="@+id/sign_up_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up!"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/colorAccent"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us"
            android:id="@+id/aboutUs"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/texts"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"
            android:layout_gravity="end|bottom"
            />
    </LinearLayout>
</ScrollView>
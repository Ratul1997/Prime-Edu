<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight=".4"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/t10"
        android:gravity="center|start"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profilePic"
                android:layout_width="80dp"
                android:layout_marginTop="20dp"
                android:layout_height="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".2"
                android:src="@drawable/s1" />


            <TextView
                android:id="@+id/nameOfStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".02"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/montserrat"
                android:text="Student Name"
                android:textColor="@color/cast_expanded_controller_text_color"
                android:textSize="18sp" />

            <TextView

                android:id="@+id/idOfStudent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_weight=".02"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="12sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/montserrat"
                android:text="Student Id"
                android:textColor="@color/cast_expanded_controller_text_color"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:src="@drawable/s2"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/options"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:background="@null"
                android:src="@drawable/ic_action_down" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1">

        <GridLayout
            android:layout_marginTop="10dp"
            android:rowCount="3"
            android:columnCount="2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="0dp"

            >
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/att"
                android:background="@drawable/bottomright"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/s3" />

                <TextView
                    android:id="@+id/attendences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Attendence" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/mrks"
                android:background="@drawable/bottom"
                android:orientation="vertical"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/s4" />

                <TextView
                    android:id="@+id/marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:text="Marks" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/notice"
                android:background="@drawable/bottomright"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/notices"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/s5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Class Notice"
                    android:fontFamily="@font/montserrat"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:background="@drawable/bottom"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/teachers"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/s6"
                    />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Teachers"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:id="@+id/payments"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/right"
                >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/s7" />
                <TextView
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payments"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/student"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/s8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Studet Details" />
            </LinearLayout>
        </GridLayout>
    </ScrollView>

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight=".1"
        android:scaleType="fitCenter"
        android:background="@null"
        android:id="@+id/noticeboard"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"

        android:src="@drawable/t4"/>
</LinearLayout>

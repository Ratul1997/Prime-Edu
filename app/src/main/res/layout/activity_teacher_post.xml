<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#F7FBFD"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight=".4">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:background="@drawable/t10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".2"
                android:background="@drawable/t10"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_left"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:layout_marginLeft="2dp"
                    android:scaleType="fitCenter"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:layout_weight=".15"
                    android:id="@+id/back"/>

                <TextView
                    android:id="@+id/school_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:autoSizeMaxTextSize="100sp"
                    android:autoSizeMinTextSize="12sp"
                    android:autoSizeStepGranularity="2sp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center|start"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:textSize="21dp"
                    android:paddingLeft="5dp"
                    android:text="School Name"
                    android:textColor="#ffffff" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_weight=".6">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/gn1"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1.4"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="GIVE"
                        android:textSize="30dp"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:textColor="#FFF"
                        android:layout_weight="1.5"
                        android:fontFamily="@font/montserrat"
                        android:layout_gravity="end"
                        android:gravity="end"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Notices"
                        android:layout_weight="1"
                        android:textSize="25dp"
                        android:autoSizeMaxTextSize="100sp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:layout_marginBottom="20dp"
                        android:textColor="#FFF"
                        android:fontFamily="@font/montserrat"
                        android:layout_gravity="end"
                        android:gravity="end"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:background="#f2eaac"
                        android:id="@+id/lin"
                        android:layout_marginBottom="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <EditText
                                android:layout_marginTop="10dp"
                                android:id="@+id/newPostWritten"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="80dp"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:background="@drawable/annoucement"
                                android:gravity="top|start"
                                android:inputType="textMultiLine"
                                android:layout_margin="5dp"
                                android:textSize="15dp" />

                            <ImageButton

                                android:layout_width="0dp"
                                android:layout_weight=".3"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:scaleType="fitCenter"
                                android:src="@drawable/gn3"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:id="@+id/post"
                                android:layout_gravity="center"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Announcements"
                        android:textStyle="bold"
                        android:textColor="@color/texts"
                        android:fontFamily="@font/montserrat"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                    <View
                        android:layout_width="250dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/texts" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView1"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:stackFromBottom="false">
                    </android.support.v7.widget.RecyclerView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home Works"
                        android:textColor="@color/texts"
                        android:textStyle="bold"
                        android:fontFamily="@font/montserrat"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        />
                    <View
                        android:layout_width="250dp"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:background="@color/texts" />
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyclerView2"
                        android:layout_margin="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_weight="1"
                        android:stackFromBottom="false">
                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>